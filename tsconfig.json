{
  "compilerOptions": {
    "lib": ["es2015", "es6", "dom"],
    "module": "commonjs",
    "target": "es5",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "noUnusedLocals": true,
    "sourceMap": true,
    "declaration": true,
    "rootDir": ".",
    "outDir": "dist",
    "allowSyntheticDefaultImports": true,
    "removeComments": true,
    "experimentalDecorators": true,
    "types" : ["node", "jasmine", "jest"],
    "strictNullChecks": true,
    "skipLibCheck": true
  },
  "include": [
    "index.ts",
    "lib/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
